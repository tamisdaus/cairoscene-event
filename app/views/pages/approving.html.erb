<div class="container">
	<h1>Approving page</h1>
	<hr>
	<% x = 0 %>
	<% @events.each do |event| %>
		<%if event.confirmed == false || event.confirmed == nil%>
			<div class="main">
				<div class="imagecontainer">
					<%= link_to (image_tag event.image.url(:medium)), edit_event_path(event)%>
				</div>
				<div class="details">
					<div class="title">
						<%=link_to event.name , event %> 
					</div>
					<div class="meh">
						<%= event.event_date %>
					</div>
					<div class="meh">
						<%=event.event_time%>
					</div>
					<div class="meh">
						<%=event.address%>
					</div>
					<%=link_to "show", event%>
				</div>
			</div>
			<% x = x + 1 %>
		<%end%>
	<%end%>
	<%if x < 1 %>
		<h2>No Events Need Approval</h2>
	<%end%>
</div>
<br><br><br><br><br><br><br><br>